{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "lib",
        "outDir": "dist",
        "paths": {
            "@nangohq/shared": ["./lib"],
            "@nangohq/models": ["./lib/models"],
            "@nangohq/utils": ["../utils/lib"],
            "@nangohq/logs": ["../logs/lib"],
            "@nangohq/database": ["../database/lib"],
            "@nangohq/node": ["../node-client/lib"]
        },
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext"
    },
    "references": [
        {
            "path": "../database"
        },
        {
            "path": "../logs"
        },
        {
            "path": "../node-client"
        },
        {
            "path": "../types"
        },
        {
            "path": "../utils"
        },
        {
            "path": "../webhooks"
        },
        {
            "path": "../records"
        },
        {
            "path": "../orchestrator"
        }
    ],
    "include": ["lib/**/*", "../utils/lib/vitest.d.ts"]
}
